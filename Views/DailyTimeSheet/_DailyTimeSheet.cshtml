@model TemplateManagementSystem.Models.DailyTimeSheetViewModel
<style>
    thead {
        display: table-header-group;
    }

    tfoot {
        display: table-row-group;
    }

    tr {
        page-break-inside: avoid;
    }

    table {
        border-collapse: collapse;
    }

        table td, table th {
            border: 1px solid black;
        }
</style>
<div style="padding:15px;">
    <h3>Daily Time Sheet</h3>
</div>
<table style="width:100% !important;">
    <tr>
        <td style="width:20%;padding:15px;"><b>Name</b></td>
        <td style="width: 80%; padding: 15px;">
            @Model.Name
        </td>
    </tr>
    <tr>
        <td style="width: 20%; padding: 15px;"><b>Department</b></td>
        <td style="width: 80%; padding: 15px;">
            @Model.Department
        </td>
    </tr>
    <tr>
        <td style="width: 20%; padding: 15px;"><b>Location</b></td>
        <td style="width: 80%; padding: 15px;">
            @Model.Location
        </td>
    </tr>
</table>
<br />
<table style="width:100% !important;">
    <thead>
        <tr>
            <th style="width:40%;padding: 15px;">Job Description</th>
            <th style="width:20%;padding: 15px;">Time Started</th>
            <th style="width:20%;padding: 15px;">Time Stopped</th>
            <th style="width:20%;padding: 15px;">Initials</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstDetails)
        {
            <tr>
                <td style="padding: 15px;">@item.JobDescription</td>
                <td style="padding: 15px;">@item.TimeStarted</td>
                <td style="padding: 15px;">@item.TimeStopped</td>
                <td style="padding: 15px;">@item.Initials</td>
            </tr>
        }
       
    </tbody>
</table>