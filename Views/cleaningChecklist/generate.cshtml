
@{
    ViewBag.Title = "Cleaning Checklist ";
}
@model TemplateManagementSystem.Models.CleaningCheckList
<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        padding: 2px;
        border: 1px solid;
    }

    .highlighted {
        border: 2px solid #FFCCCB;
    }
</style>
<style>
    .rows {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
    }

    .cols-md-4 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    .cols-md-6 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    .cols-md-8 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    .cols-md-12 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    .cols-md-2 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    .cols-md-10 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }

    @@media (min-width: 768px) {
        .cols-md-4 {
            flex: 0 0 33.33333%;
            max-width: 33.33333%;
        }

        .cols-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .cols-md-8 {
            flex: 0 0 66%;
            max-width: 66%;
        }

        .cols-md-12 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .cols-md-2 {
            flex: 0 0 10%;
            max-width: 10%;
        }

        .cols-md-10 {
            flex: 0 0 90%;
            max-width: 90%;
        }
    }
</style>


<div class="card" style="padding-left:7rem;padding-right:7rem">
    @using (Html.BeginForm("index", "cleaningchecklist", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(s => s.Id)
        @Html.HiddenFor(s => s.logo)

        <br />
        <br />
        <div class="rows">
            <div class="cols-md-12" style="text-align:center">
                @if (string.IsNullOrEmpty(Model.logo))
                {
                    <img src="~/assets/images/defaultimage.png" width="200" height="100" />

                }
                else
                {
                    <img src="~/pics/@Model.logo" width="200" height="100" />

                }
            </div>

        </div>
        <br />
        <table style="width:100% !important;">
            <tr>
                <td style="padding-left: 1rem;">
                    Client Name
                </td>
                <td>
                    @Html.TextBoxFor(s => s.clientName, new { @class = "form-control sm", @type = "text" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Address
                </td>
                <td>
                    @Html.TextBoxFor(s => s.address, new { @class = "form-control sm", @type = "text" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Job Ref
                </td>
                <td>
                    @Html.TextBoxFor(s => s.jobrefer, new { @class = "form-control sm", @type = "text" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Date
                </td>
                <td>
                    @Html.TextBoxFor(s => s.datestr, new { @class = "form-control sm", @type = "date" })

                </td>
            </tr>
        </table>
        <br />
        <div class="rows cols-md-12">
            <h3>Cleaning Checklist</h3>
        </div>
        <table style="width:100% !important;">
            <tr style="text-align:center">
                <td style="padding-left: 1rem;" width="70%">
                    <b>Task</b>
                </td>
                <td style="padding-left: 1rem;">
                    <b>Completed</b>
                </td>

            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Clean windows &Aacute; tracks (single story)
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check1, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Wipe  &Aacute; clean screen doors
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check2, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Wipe blinds (Horizontal only)
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check3, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Clean cobwebs from comices
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check4, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Remove Marks from Walls
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check5, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    clean wets
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check6, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    clean skiting
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check7, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Wipe &Aacute; clean doors and door trim
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check8, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    wipe light switches &Aacute; power oulets
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check9, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    clean cupboards inside and outside including tracks
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check10, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Clean ceiling Fan
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check11, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Air conditioner vents and filter dusted
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check12, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr>
                <td style="padding-left: 1rem;">
                    Rooms vacummed and mooped
                </td>
                <td>
                    @Html.CheckBoxFor(s => s.check13, new { @class = "form-control sm" })

                </td>
            </tr>
            <tr >
                <td colspan="2">
                    <label>Any Other Comments</label>
                    @Html.TextAreaFor(s => s.comments, new { @class = "form-control sm",@placeholder="Comments" })

                </td>
            </tr>
        </table><div class="rows cols-md-6">
    <label>Room Photo</label>
    <br />
    @if (string.IsNullOrEmpty(Model.afterPhoto))
    {
        <img width="500" id="rm" />

    }
    else
    {
        @Html.HiddenFor(s => s.afterPhoto)
        <img width="500" id="rm" src="~/pics/@Model.afterPhoto" />


    }
    <input type="file" class="form-control" name="afterPhoto" accept="image/*" onchange="loadFile(event)" />

</div>
        <div class="row" style="margin:1rem">
            <div class="col-md-12">
                @if (string.IsNullOrEmpty(ViewBag.pre))
                {
                    @*<button type="button" class="btn btn-success" data-toggle="modal" data-target="#emailModal">Generate with Email</button>*@
                    <button type="submit" class="btn btn-success">Generate</button>

                    if (Model.Id > 0)
                    {
                        @Html.HiddenFor(s => s.type, new { @class = "form-control", @id = "mycop" })

                        <button type="submit" id="mycopy" class="btn btn-success">Make a Copy</button>
                    }

                }

                <a href="/" class="btn btn-default" style="background-color: #ff615e;">Cancel</a>
            </div>
        </div>

    }

</div>



@section scripts{
    <script type="text/javascript">

        $(document).on("click", '#mycopy', function () {

            $("#mycop").val("Copy");

        });
    </script>

 
    <script type="text/javascript">
        var loadFile = function (event) {
            var output = document.getElementById('rm');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src) // free memory
            }
        };
       
    </script>
}

